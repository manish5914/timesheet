{
    "compilerOptions": {
      "jsx": "react",
      "lib": ["es6", "dom"],
      "rootDir": "src",
      "module": "umd",
      "target": "es5",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop": true
    },
    "include": [
      "./src/*.tsx",
      "./src/*.ts"

    ],
    "exclude": [
      "node_modules",
      "build"
    ]
}